{
    "name": "cc-cli-quota",
    "displayName": "CC Cli Quota",
    "description": "Monitoring AI CLI usage and quotas (Claude, Codex, Gemini, Z.ai, Openrouter) in VS Code.",
    "version": "1.1.2",
    "publisher": "FlameZerg",
    "repository": "https://github.com/FlameZerg/CC-Cli-Quota",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "AI"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "icon": "icon.png",
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "cc-cli-quota.check",
                "title": "AI: Check Quota"
            },
            {
                "command": "cc-cli-quota.toggleProviders",
                "title": "AI: Toggle Providers"
            }
        ],
        "configuration": {
            "title": "CC Cli Quota",
            "properties": {
                "cclimits.enabledProviders": {
                    "type": "array",
                    "default": [
                        "claude",
                        "codex",
                        "gemini",
                        "zai",
                        "openrouter"
                    ],
                    "description": "Enabled AI providers to check."
                },
                "cclimits.useCached": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use cache if fresh (<60s)."
                },
                "cclimits.zaiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Z.AI API Key (Required for Z.AI monitoring)."
                },
                "cclimits.openrouterApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "OpenRouter API Key (Required for OpenRouter monitoring)."
                },
                "cclimits.autoRefresh": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable automatic refresh of quotas."
                },
                "cclimits.refreshInterval": {
                    "type": "integer",
                    "default": 2,
                    "minimum": 1,
                    "maximum": 60,
                    "description": "Refresh interval in minutes (default 2)."
                },
                "cclimits.pythonPath": {
                    "type": "string",
                    "default": "python",
                    "description": "Path to the Python interpreter (e.g., python, python3, /path/to/venv/bin/python)."
                }
            }
        }
    },
    "devDependencies": {
        "@vscode/vsce": "^3.7.1"
    }
}